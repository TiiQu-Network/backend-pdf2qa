{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": ["src", "**/*.ts", "**/*.d.ts"]
}
